@{
    List<AdvanceWhoIsApprovingDTO> advanceList = (List<AdvanceWhoIsApprovingDTO>)ViewData["projectList"];
    int i = 0;
    int upperID = int.Parse(User.FindFirst(ClaimTypes.UserData)?.Value);
    int nowID = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value);
    int titleID = int.Parse(User.FindFirst(ClaimTypes.Actor)?.Value);
}
@using System.Security.Claims
@model AdvanceDetailsInsertDTO
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/style.css">

    <title>Detaylar</title>
</head>
<body>
    <div class="content">

        <div class="container">
            <h2 class="mb-5">Detaylar</h2>
            <div class="row">
                <div class="card col-md-5">

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><span>Çalışanın Adı:</span>@advanceList.Select(x=>x.WorkerName).First()</li>
                        <li class="list-group-item"><span>Unvanı:</span>@advanceList.Select(x=>x.TitleName).First()</li>
                        <li class="list-group-item"><span>Birimi:</span>@advanceList.Select(x=>x.UnitName).First()</li>
                        <li class="list-group-item"><span>Talep Oluşturma Tarihi:</span>@advanceList.Select(x=>x.RequestDate).First()</li>
                        <li class="list-group-item"><span>Alınmak istenen Tarih:</span>@advanceList.Select(x=>x.DesiredDate).First()</li>

                        <li class="list-group-item"><span>Projeler:</span>@advanceList.Select(x=>x.ProjectName).First()</li>


                    </ul>
                </div>
                <div class="col-md-1"></div>
                <div class="card col-md-5">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><span>Talep Edilen Tutar:</span>@advanceList.Select(x=>x.AdvanceAmount).First()</li>

                        <li class="list-group-item"><span>Son Onaylanan Tutar:</span>@advanceList.Select(x=>x.ApprovedAmount).Last()</li>

                        <li class="list-group-item"><span>Son Durumu:</span>@advanceList.Select(x=>x.ApprovalName).Last()</li>

                        <li class="list-group-item"><span>Açıklama:</span>@advanceList.Select(x=>x.AdvanceExplanation).First()</li>
                    </ul>
                </div>

            </div>
            <br />
            @await Html.PartialAsync("_TablePartialView", new AdvanceDetailDTO())
            <br />
            @if (titleID == 6)
            {
                @await Html.PartialAsync("_FMApproveDatePartialView", new AdvanceDetailsInsertDTO())

            }
            else{

                @await Html.PartialAsync("_ApproveAmountDivPartialView", new AdvanceDetailsInsertDTO())
            }
        </div>

    </div>



    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>

</body>